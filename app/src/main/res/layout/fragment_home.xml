<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bowlby_one_sc"
                android:text="@string/welcome_message"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pillImage" />

            <ImageView
                android:id="@+id/pillImage"
                android:layout_width="71dp"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/logo_image"
                android:src="@drawable/pill_removebg_preview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="36dp"
                android:padding="10dp"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:rowCount="4">

                <androidx.cardview.widget.CardView
                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="1"
                    app:layout_row="0">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="0"
                    app:layout_row="1">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="0"
                    app:layout_row="2">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="0"
                    app:layout_row="3">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="1"
                    app:layout_row="1">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="1"
                    app:layout_row="2">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/CardBase"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="1"
                    app:layout_row="3">

                    <LinearLayout
                        style="@style/CardLayout"
                        app:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            style="@style/CardImage"
                            android:src="@drawable/me_time"
                            app:srcCompat="@drawable/me_time" />

                        <TextView
                            style="@style/CardText"
                            android:text="me" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </androidx.gridlayout.widget.GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>